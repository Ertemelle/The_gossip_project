<h2>Editer l'article</h2>

<%= form_for @gossip do |f| %>
<div class="form-group">
	<label>Titre de l'article</label>
	<%= f.text_field :gossip_title, class: 'form-control' %>
	<label>Contenu de l'article</label>
	<%= f.text_area :gossip_content, class: 'form-control' %>
</div>
<div class="form-group">
	<button type="submit" class="btn btn-lg btn-primary">Modifier l'article</button>
<% end %>