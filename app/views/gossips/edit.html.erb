<h1>Editer le Gossip</h1>

<%= form_for @gossip do |f| %>
  <div class="form-group">
    <label>Nom du Gossip: </label>
      <%= f.text_field :gossip_title, class: 'form-control', placeholder: 'Title' %>
    </div>
    <div class="form-group">
      <label>Quel est ton gossip? </label>
        <%= f.text_area :gossip_content, class: 'form-control', placeholder: 'Ton gossip' %>
    </div>
    <div>
      <button type="submit" class="btn btn-primary">Valider</button>
    </div>
 <% end -%>